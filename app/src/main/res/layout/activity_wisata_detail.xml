<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    tools:context=".WisataDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtDetailWisata"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="30sp"
            android:background="#8BC34A"
            android:gravity="center"
            android:text="Detail Wisata"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgDetailWisata"
            android:layout_width="373dp"
            android:layout_height="233dp"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            app:srcCompat="@drawable/tiga" />

        <TextView
            android:id="@+id/keterangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ipsa officia hic totam delectus fugit pariatur, dolorem architecto quas! Animi totam magnam odio natus sit unde? Est et velit ipsum repudiandae."
            android:textAlignment="center" />

        <Button
            android:id="@+id/btnDetail"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#8BC34A"
            android:layout_marginTop="10sp"
            android:text="Map Wisata" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>